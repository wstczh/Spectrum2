<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="6"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            >
            <activitytest.example.com.frequency.GridRelativeLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></activitytest.example.com.frequency.GridRelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:orientation="vertical"
            >

            <ListView
                android:layout_marginTop="50dp"
                android:id="@+id/lv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"></ListView>



        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#FFFFFF"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            ></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical"
            >
            <!--复用键-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_1"
                android:background="@drawable/select_back"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_2"
                android:background="@drawable/select_function"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_3"
                android:background="@drawable/select_function"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_4"
                android:background="@drawable/select_function"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_5"
                android:background="@drawable/select_function"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_6"
                android:background="@drawable/select_function"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_7"
                android:background="@drawable/select_function"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_8"
                android:background="@drawable/select_function"
                />

            <Button
                android:background="@drawable/select_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_9"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            ></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        android:background="#FFFFFF"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            >

            <!--FREQ，SPAN，AMPT三个主要键-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"

                >
                <Button
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btn_freq"
                    android:text="FREQ"
                    android:background="@drawable/select_black"
                    />
                <Button
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btn_span"
                    android:text="SPAN"
                    android:background="@drawable/select_black"
                    />
                <Button
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btn_ampt"
                    android:text="AMPT"
                    android:background="@drawable/select_black"
                    />

            </LinearLayout>

            <!--其余功能键-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                    <Button

                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="BW/Det"
                        android:id="@+id/bw"
                        android:textColor="#000000"
                        android:layout_margin="5dp"
                        android:background="@drawable/selector_white"
                        />
                    <Button

                        android:textColor="#000000"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="Sweep/Trig"
                        android:background="@drawable/selector_white"
                        />
                    <Button

                        android:textColor="#000000"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="Marker"
                        android:id="@+id/marker1"
                        android:background="@drawable/selector_white"
                        />
                    <Button

                        android:textColor="#000000"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="Marker→"
                        android:id="@+id/marker2"
                        android:background="@drawable/selector_white"
                        />
                    <Button

                        android:textColor="#000000"
                        android:layout_margin="5dp"
                        android:background="@drawable/select_lightblack"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="Auto"
                        android:id="@+id/auto"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                    <Button

                        android:textColor="#000000"
                        android:layout_margin="5dp"
                        android:background="@drawable/selector_white"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="Trace/P/F"
                        android:id="@+id/trace"
                        />
                    <Button

                        android:textColor="#000000"
                        android:layout_margin="5dp"
                        android:background="@drawable/select_lightblack"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="TG"
                        android:id="@+id/tg"
                        />
                    <Button

                        android:textColor="#000000"
                        android:layout_margin="5dp"
                        android:background="@drawable/selector_white"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="MarkerFctn"
                        android:id="@+id/markerfctn"
                        />
                    <Button

                        android:textColor="#000000"
                        android:layout_margin="5dp"
                        android:background="@drawable/selector_white"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="Peak"
                        android:id="@+id/peak"
                        />
                    <Button

                        android:textColor="#000000"
                        android:layout_margin="5dp"
                        android:background="@drawable/selector_white"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="User"
                        android:id="@+id/user"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                    <Button

                        android:textColor="#000000"
                        android:layout_margin="5dp"
                        android:background="@drawable/select_lightblack"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="Meas"
                        android:id="@+id/meas"
                        />
                    <Button
                        android:textColor="#000000"
                        android:layout_margin="5dp"
                        android:background="@drawable/selector_white"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="MeasSetup"
                        android:id="@+id/meassetup"
                        />
                    <Button
                        android:textColor="#000000"
                        android:layout_margin="5dp"
                        android:background="@drawable/selector_white"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="Demod"
                        android:id="@+id/demod"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                    <Button
                        android:textColor="#000000"
                        android:layout_margin="5dp"
                        android:background="@drawable/selector_white"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="System"
                        android:id="@+id/system"
                        />
                    <Button
                        android:textColor="#000000"
                        android:layout_margin="5dp"
                        android:background="@drawable/selector_white"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="PrintSetup"
                        android:id="@+id/printsetup"
                        />
                    <Button
                        android:textColor="#000000"
                        android:layout_margin="5dp"
                        android:background="@drawable/selector_white"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="Storage"
                        android:id="@+id/storage"
                        />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <!--數字按鈕和旋鈕-->
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1"
                        android:id="@+id/btn_number1"
                        android:layout_margin="8dp"
                        android:background="@drawable/selector_white"
                        android:textColor="#000000"
                        />
                    <Button
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="4"
                        android:id="@+id/btn_number4"
                        android:background="@drawable/selector_white"
                        android:textColor="#000000"
                        />
                    <Button
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="7"
                        android:id="@+id/btn_number7"
                        android:background="@drawable/selector_white"
                        android:textColor="#000000"
                        />
                    <Button
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="."
                        android:id="@+id/btn_numberdot"
                        android:background="@drawable/selector_white"
                        android:textColor="#000000"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2"
                        android:id="@+id/btn_number2"
                        android:layout_margin="8dp"
                        android:background="@drawable/selector_white"
                        android:textColor="#000000"
                        />
                    <Button
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="5"
                        android:id="@+id/btn_number5"
                        android:background="@drawable/selector_white"
                        android:textColor="#000000"
                        />
                    <Button
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="8"
                        android:id="@+id/btn_number8"
                        android:background="@drawable/selector_white"
                        android:textColor="#000000"
                        />
                    <Button
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        android:id="@+id/btn_number0"
                        android:background="@drawable/selector_white"
                        android:textColor="#000000"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="3"
                        android:id="@+id/btn_number3"
                        android:layout_margin="8dp"
                        android:background="@drawable/selector_white"
                        android:textColor="#000000"
                        />
                    <Button
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="6"
                        android:id="@+id/btn_number6"
                        android:background="@drawable/selector_white"
                        android:textColor="#000000"
                        />
                    <Button
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="9"
                        android:id="@+id/btn_number9"
                        android:background="@drawable/selector_white"
                        android:textColor="#000000"
                        />
                    <Button
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+/-"
                        android:id="@+id/btn_numberadd"
                        android:background="@drawable/selector_white"
                        android:textColor="#000000"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Esc"
                        android:id="@+id/btn_esc"
                        android:layout_margin="8dp"
                        android:background="@drawable/select_lightblack"
                        android:textColor="#000000"
                        />
                    <Button
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Back"
                        android:id="@+id/btn_back"
                        android:background="@drawable/select_lightblack"
                        android:textColor="#000000"
                        />
                    <Button
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Enter"
                        android:id="@+id/btn_enter"
                        android:background="@drawable/select_lightblack"
                        android:textColor="#000000"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    ></LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@mipmap/a"
                    ></LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/select_downarrow"
                        />
                    <Button
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/select_uparrow"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
